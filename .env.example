# ChainCare Smart Contracts Environment Variables
# Copy this file to .env and fill in your actual values

# ================================
# NETWORK RPC URLS
# ================================

# Ethereum Networks
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
GOERLI_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Polygon Networks
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
MUMBAI_RPC_URL=https://polygon-mumbai.infura.io/v3/YOUR_INFURA_PROJECT_ID

# BSC Networks
BSC_RPC_URL=https://bsc-dataseed.binance.org/
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/

# ================================
# PRIVATE KEYS (NEVER COMMIT THESE!)
# ================================

# Deployment private key (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Alternative: Mnemonic phrase
MNEMONIC=your twelve word mnemonic phrase here

# ================================
# API KEYS
# ================================

# Infura Project ID
INFURA_PROJECT_ID=your_infura_project_id

# Alchemy API Key
ALCHEMY_API_KEY=your_alchemy_api_key

# Etherscan API Key (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key

# Polygonscan API Key
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# BSCScan API Key
BSCSCAN_API_KEY=your_bscscan_api_key

# CoinMarketCap API Key (for gas reporting)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# ================================
# STABLECOIN ADDRESSES
# ================================

# Mainnet Stablecoin Addresses
USDC_MAINNET=0xA0b86a33E6441d58a676d8f1ce3f34d7CbecCCdE
USDT_MAINNET=0xdAC17F958D2ee523a2206206994597C13D831ec7
DAI_MAINNET=0x6B175474E89094C44Da98b954EedeAC495271d0F

# Testnet Stablecoin Addresses (Sepolia)
USDC_SEPOLIA=0x1c7D4B196Cb0C7B01d743Fbc6116a902379C7238
USDT_SEPOLIA=0x509Ee0d083DdF8AC028f2a56731412edD63223B9
DAI_SEPOLIA=0xFF34B3d4Aee8ddCd6F9AFFFB6Fe49bD371b8a357

# Polygon Mumbai Testnet
USDC_MUMBAI=0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174
USDT_MUMBAI=0xc2132D05D31c914a87C6611C10748AEb04B58e8F
DAI_MUMBAI=0x8f3Cf7ad23Cd3CaDbD9735AFf958023239c6A063

# ================================
# DEPLOYMENT CONFIGURATION
# ================================

# Gas price in gwei
GAS_PRICE=20

# Gas limit
GAS_LIMIT=6000000

# Default stablecoin for payments (contract address)
DEFAULT_STABLECOIN=0xA0b86a33E6441d58a676d8f1ce3f34d7CbecCCdE

# Platform fee percentage (in basis points, e.g., 25 = 0.25%)
PLATFORM_FEE_PERCENTAGE=25

# Fee collector address
FEE_COLLECTOR_ADDRESS=your_fee_collector_address

# ================================
# TESTING & DEVELOPMENT
# ================================

# Enable gas reporting
REPORT_GAS=true

# Enable contract size reporting
REPORT_SIZE=true

# Test timeout in milliseconds
TEST_TIMEOUT=100000

# Enable debug mode
DEBUG=false

# ================================
# IPFS CONFIGURATION
# ================================

# IPFS Gateway URL
IPFS_GATEWAY=https://ipfs.io/ipfs/

# Pinata API Keys (for IPFS pinning)
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_key

# ================================
# ORACLE CONFIGURATION
# ================================

# Chainlink Price Feed Addresses (Mainnet)
ETH_USD_PRICE_FEED=0x5f4eC3Df9cbd43714FE2740f5E3616155c5b8419
USDC_USD_PRICE_FEED=0x8fFfFfd4AfB6115b954Bd326cbe7B4BA576818f6

# ================================
# MULTISIG CONFIGURATION
# ================================

# Gnosis Safe address for contract ownership
MULTISIG_ADDRESS=your_multisig_address

# Required confirmations for multisig
MULTISIG_THRESHOLD=2

# ================================
# MONITORING & ALERTS
# ================================

# Tenderly Project Slug
TENDERLY_PROJECT=your_tenderly_project

# Tenderly Username
TENDERLY_USERNAME=your_tenderly_username

# Slack webhook for deployment notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url

